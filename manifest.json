{
  "manifest_version": 3,
  "name": "fnOS Scanner",
  "version": "1.4.0",
  "description": "fnOS 目录遍历漏洞检测工具",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/fnos_gray_16.png",
      "48": "icons/fnos_gray_48.png",
      "128": "icons/fnos_gray_128.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/fnos_gray_16.png",
    "48": "icons/fnos_gray_48.png",
    "128": "icons/fnos_gray_128.png"
  }
}
